<%= render "shared/flash" %>

    <h1 class=" col-xs-offset-2">Articles</h1>

    <% @articles.each do |article| %>
        <div class="row col-xs-12">
          <div class="well col-xs-4 col-xs-offset-2">
            <strong>Titre:</strong>
            <%= article.title %>
          </div>
          <div class="well col-xs-8 col-xs-offset-2">
            <strong>Description:</strong> <hr />
            <%= simple_format(article.description) %>
            <%= link_to 'Show', article, class: "btn btn-warning btn-xs" %>
            <%= link_to 'Edit', edit_article_path(article), class: "btn btn-info btn-xs" %>
            <%= link_to 'Delete', article, method: :delete ,class: "btn btn-danger btn-xs", data: { confirm: "Are you sure? to delete #{article.title}?" } %>
          </div>
        </div>
    <% end %>

<br>

